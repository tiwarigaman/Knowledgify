<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4F4"
    tools:context=".SignInNormal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/signInText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:fontFamily="@raw/urbanist_bold"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/signInInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please provide us with your information in order to login your account"
        android:textColor="@color/lite_black"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@raw/urbanist_regular"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInText"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/lite_black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@raw/urbanist_regular"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInInfoText"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/emailAddressFieldLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/lite_black"
        android:fontFamily="@raw/urbanist_semi_bold"
        android:textColorHint="#949494"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/lite_black"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@raw/urbanist_regular"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressFieldLogin"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/link_color"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@raw/urbanist_regular"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAddressFieldLogin"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/passwordFieldLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/lite_black"
        android:textColorHint="#949494"
        android:fontFamily="@raw/urbanist_semi_bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sign in"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@raw/urbanist_bold"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordFieldLogin"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/signInBtn"
        tools:layout_editor_absoluteX="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Are you instructor?"
            android:textColor="@color/lite_black"
            android:textSize="12sp"
            android:gravity="end"
            android:fontFamily="@raw/urbanist_regular"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/instructorLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login here"
            android:textStyle="bold"
            android:fontFamily="@raw/urbanist_semi_bold"
            android:textColor="@color/link_color"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        tools:layout_editor_absoluteX="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Donâ€™t you have an account?"
            android:textColor="@color/lite_black"
            android:textSize="12sp"
            android:fontFamily="@raw/urbanist_regular"
            android:gravity="end"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/userSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:textStyle="bold"
            android:textColor="@color/link_color"
            android:fontFamily="@raw/urbanist_semi_bold"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="20dp">


        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#8E8E8E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Or Continue With"
            android:textColor="@color/lite_black"
            android:textSize="11sp"
            android:fontFamily="@raw/urbanist_regular"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="#8E8E8E"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/googleSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:text="Google"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#4E4E4E"
            android:ems="1"
            android:textSize="16sp"
            android:fontFamily="@raw/urbanist_regular"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_24"
            app:drawableStartCompat="@drawable/google"
            tools:ignore="HardcodedText" />

        <!--        <ImageView-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:src="@drawable/google"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:background="@drawable/circle_stroke"-->
        <!--            />-->
        <!--        <ImageView-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:src="@drawable/fb"-->
        <!--            android:layout_marginStart="10dp"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:background="@drawable/circle_stroke"-->
        <!--            />-->

        <TextView
            android:id="@+id/fbSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:text="Facebook"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#4E4E4E"
            android:fontFamily="@raw/urbanist_regular"
            android:textSize="16sp"
            android:ems="1"
            app:drawableEndCompat="@drawable/baseline_arrow_forward_24"
            app:drawableStartCompat="@drawable/fb"
            tools:ignore="HardcodedText" />

    </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>