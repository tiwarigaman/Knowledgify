<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="5dp"
    android:background="@drawable/card_corners">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewNetworkAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        android:src="@drawable/user_normal" />

    <TextView
        android:id="@+id/networkAddName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@raw/sfprodisplaymedium"
        android:text="@string/app_name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/descriptionNetworkAdd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top|center"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@raw/sfprodisplayregular"
        android:text="@string/app_name"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/connectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:fontFamily="@raw/sfprodisplayregular"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/link_color"
        android:background="@drawable/accepct_round_button"
        tools:ignore="HardcodedText" />



</LinearLayout>