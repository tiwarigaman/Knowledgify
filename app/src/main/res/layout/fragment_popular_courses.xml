<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".fragment.PopularCoursesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtnPopularCourse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Back"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_24"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/popular_course_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@raw/sfprodisplaymedium"
            android:paddingStart="20dp"
            android:layout_weight="1"
            android:text="Popular Courses"
            android:layout_gravity="center"
            android:textColor="#dedede"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewPopularCourses12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_course_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        />

</LinearLayout>
